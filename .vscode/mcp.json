{
  "servers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "{{PROJECT_PATH}}",
        "--enable-gui-log-window",
        "false",
        "--enable-web-dashboard",
        "false"
      ]
    },
    "kiri": {
      "command": "npx",
      "args": [
        "kiri-mcp-server@latest",
        "--repo",
        "{{PROJECT_PATH}}",
        "--db",
        ".kiri/index.duckdb",
        "--watch"
      ]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--browserUrl",
        "http://127.0.0.1:9222"
      ]
    },
    "playwright": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=host",
        "--ipc=host",
        "--cap-add=SYS_ADMIN",
        "-e", "DISPLAY=:99",
        "mcr.microsoft.com/playwright:v1.56.1-jammy",
        "sh", "-c", "Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 & npx -y playwright-mcp@latest"
      ]
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    }
  }
}
